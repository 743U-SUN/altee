// デバッグ用：現在のセッション情報を表示するコンポーネント

'use client'

import { useSession } from 'next-auth/react'
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card'

export function SessionDebug() {
  const { data: session, status } = useSession()

  return (
    <Card className="mb-6">
      <CardHeader>
        <CardTitle>セッション情報（デバッグ用）</CardTitle>
      </CardHeader>
      <CardContent>
        <div className="space-y-2">
          <p><strong>Status:</strong> {status}</p>
          <p><strong>User ID:</strong> {session?.user?.id || 'なし'}</p>
          <p><strong>Email:</strong> {session?.user?.email || 'なし'}</p>
          <p><strong>Name:</strong> {session?.user?.name || 'なし'}</p>
          <p><strong>Role:</strong> {session?.user?.role || 'なし'}</p>
          <details className="mt-4">
            <summary>完全なセッション情報</summary>
            <pre className="mt-2 text-xs bg-gray-100 p-2 rounded">
              {JSON.stringify(session, null, 2)}
            </pre>
          </details>
        </div>
      </CardContent>
    </Card>
  )
}
